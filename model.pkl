# train_model.py
import pandas as pd
from sklearn.linear_model import LinearRegression
import pickle

# Sample dummy data (use your actual dataset here)
data = {
    'area': [1000, 1500, 1800],
    'bedrooms': [2, 3, 4],
    'bathrooms': [1, 2, 2],
    'price': [3000000, 4500000, 5000000]
}
df = pd.DataFrame(data)

X = df[['area', 'bedrooms', 'bathrooms']]
y = df['price']

model = LinearRegression()
model.fit(X, y)

with open("model.pkl", "wb") as f:
    pickle.dump(model, f)

print("âœ… Model saved as model.pkl")
